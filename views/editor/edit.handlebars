<div class="container">
    <h1>Edit Post</h1>

    <div class="row p-4">
        <div class="col-md-10">
            <form action="/editor/edit/{{post._id}}?newMethod=PUT" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Enter The Title" value="{{post.title}}" required>
                </div>

                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" id="author" placeholder="Enter your first- and lastname" value="{{post.author}}" required>
                </div>

                <div class="form-group">
                  <label for="file">Thumbnail upload</label>
                  <p>Current uploaded image-file: {{post.imageFile}} </p>
                  <input type="file" class="form-control" id="image-file" name="uploadedImageFile" required>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" class="form-control" placeholder="Enter your content here" rows="10" required>{{post.description}}</textarea>
                </div>

                <div class="form-group">
                  <label for="pdfFile">PDF upload</label>
                  <p>Current uploaded pdf-file: {{post.pdfFile}} </p>
                  <input type="file" class="form-control" id="pdf-file" name="uploadedPdfFile" required>
                </div>

                <button class="btn btn-outline-warning btn-lg" type="submit">Edit Post</button>


            </form>
        </div>
    </div>



</div>
