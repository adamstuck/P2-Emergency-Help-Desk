<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>All Posts</h1>
    </div>

    <table class="table table-bordered" id="myTable">
        <thead class="bg-dark text-center">
            <tr class="text-white">
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Time submitted</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="text-center">
            {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{author}}</td>
                <td>{{description}}</td>
                <td>{{creationDate}}</td>
                <td class="d-flex justify-content-center">
                    <a href="/editor/posts/edit/{{_id}}" class="btn btn-sm btn-warning mr-2">Edit Post</a>
                    <form action="/editor/posts/delete/{{id}}?newMethod=DELETE" method="post">
                    <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="col-md-4">
        <div class="card my-4">
            <h5 class="card-header">Search through all posts</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for a Post" id="myInput" onkeyup="search_posts()">
                </div>
            </div>
        </div>
    </div>
</div>
