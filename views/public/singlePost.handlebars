{{!-- This is where a single post from the public info page is displayed --}}

<div class="row">

   <div class="col-lg-8">

       <!-- Title -->
       <h1 class="mt-4">{{post.title}}</h1>

       <!-- Author -->
       <p class="lead">
           by {{post.author}}
       </p>

       <hr>

       <!-- Date -->
       <p>Posted on {{post.creationDate}}</p>

       <hr>

       <!-- Post describtion -->
       <p class="lead">{{post.description}}</p>

       <hr>

       <!-- PDF viewer -->
       <embed src="{{post.pdfFile}}#toolbar=0&navpanes=0&scrollbar=0" width="100%" height="700em"/>

   </div>
</div>
